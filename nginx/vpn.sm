upstream ovpn_board {
    server 127.0.0.1:5000;
    keepalive 16;
}

server {
    server_name vpn.sm;

    access_log off;
    error_log off;

    location / {
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Host $http_host;
        proxy_set_header X-NginX-Proxy true;

        proxy_pass http://ovpn_board/;
    }
}
